
@{
    ViewBag.Title = "AddAdministrator";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model NotesMarketPlace.Database.User

<!-- Add Admin section -->
@using (Html.BeginForm())

{
    @Html.AntiForgeryToken()


    <section class="add-admin">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p class="page-heading">Add Administrator</p>

                </div>
                <div class="col-md-6 inside-col">
                    <div class="col-md-12">
                        <div class="form-group">
                            <p>First Name*</p>
                        <!--<input type="text" class="form-control" id="name" placeholder="Enter your full name">-->
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", id = "fname", placeholder = "Enter first name" } })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <p>Last Name*</p>
                            <!--<input type="text" class="form-control" id="name" placeholder="Enter your full name">-->
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", id = "lname", placeholder = "Enter first name" } })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <p>Email*</p>
                            <!--<input type="text" class="form-control" id="name" placeholder="Enter your full name">-->
                            @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control", id = "email", placeholder = "Enter first name" } })
                            @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            <p>Phone Number</p>
                            <div class="col-md-2 col-sm-2 col-xs-4 phone-no">
                                <select class="form-control">
                                    <option>+91</option>
                                    <option>+1</option>
                                    <option>+801</option>
                                </select>
                            </div>
                            <div class="col-md-10 col-sm-10 col-xs-8  phone-no">
                                <!--<input type="text" class="form-control" id="name" placeholder="Enter number of note pages">-->
                                @Html.EditorFor(model => model.PhoneNo, new { htmlAttributes = new { @class = "form-control", id = "phoneno", placeholder = "Enter Phone Number" } })
                                @Html.ValidationMessageFor(model => model.PhoneNo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>

                    <div class="col-md-12">
                        <a class="btn btn-general btn-work  smooth-scroll" href="#about" title="Sell Book" role="button">SUBMIt</a>
                    </div>


                </div>

            </div>
        </div>

    </section>
}
    <br />
    <br />
    <br />

    <!-- Add Admin Ends -->
